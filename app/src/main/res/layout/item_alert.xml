<!-- res/layout/item_alert.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alertBackground"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/textView_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severe Thunderstorm Warning"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_bold" />

    <TextView
        android:id="@+id/textView_alert_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heavy rainfall and strong winds expected."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp" />

</LinearLayout>
